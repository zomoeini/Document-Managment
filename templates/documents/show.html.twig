{% extends 'base.html.twig' %}

{% block title %}Documents{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 5%">
    <h1>Document Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ document.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('documents_index') }}">back to list</a>

    <a class="btn btn-dark" href="{{ path('documents_edit', {'id': document.id}) }}">edit</a>
    </div>

    {{ include('documents/_delete_form.html.twig') }}
{% endblock %}
